<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :target_name, style: "display: block" %>
    <%= form.text_field :target_name %>
  </div>

  <%= form.number_field :source_name, id: :source_name, class:"form-control", value: current_account.account_num, type: :hidden  %>
  <%= form.number_field :account_id_source, id: :account_id_source, class:"form-control", value: current_account.id, type: :hidden  %>
  

  <div>
    <%= form.submit %>
  </div>
<% end %>
